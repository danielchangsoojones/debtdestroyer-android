<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/margin_small"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_title_textview"
        style="@style/Debt.Destroyer.Body"
        android:layout_width="0dp"
        android:padding="@dimen/margin_medium"
        android:text="@string/banner_title_amount_paid_to_student_loans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/action_setup"
        style="@style/Debt.Destroyer.Button.Small"
        android:layout_width="wrap_content"
        android:padding="1dp"
        android:text="@string/set_up"
        android:textSize="@dimen/footnote_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/action_setup" />

</androidx.constraintlayout.widget.ConstraintLayout>