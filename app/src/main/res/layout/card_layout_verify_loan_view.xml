<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    android:background="@drawable/bg_bottom_rounded_corners"
    android:padding="@dimen/_10sdp">

    <com.debtdestroyer.android.utils.GradientTextView
        android:id="@+id/home_how_to_earn_tickets_text_view"
        style="@style/Debt.Destroyer.Gradient.Heading"
        android:gravity="center_vertical"
        android:text="@string/banner_verify_student_loan"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/action_setup"
        style="@style/Debt.Destroyer.RoundedButton"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:text="@string/action_verify_student_loan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_how_to_earn_tickets_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>