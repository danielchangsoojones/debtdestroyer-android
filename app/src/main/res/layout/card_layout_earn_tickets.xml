<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    android:background="@drawable/bg_bottom_rounded_corners"
    android:padding="@dimen/_10sdp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/home_how_to_earn_tickets_text_view"
        style="@style/Debt.Destroyer.Heading"
        android:gravity="center_vertical"
        android:text="@string/banner_how_to_earn_tickets"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_earnings_option_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/margin_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_how_to_earn_tickets_text_view">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/action_setup"
            style="@style/Debt.Destroyer.Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:padding="1dp"
            android:text="1 Tickets"
            android:textColor="@color/black"
            android:textSize="@dimen/footnote_text_size"
            app:icon="@drawable/ic_tickets"
            app:iconGravity="textEnd"
            app:iconSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/lightgrey"
            app:strokeWidth="0.6dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_title_textview"
            style="@style/Debt.Destroyer.Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@string/earning_round_ups_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/action_setup"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            style="@style/DividerStyle"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_title_textview" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_title_textview_2"
            style="@style/Debt.Destroyer.Body"
            android:layout_width="0dp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@string/earning_round_ups_2"
            app:layout_constraintBottom_toBottomOf="@+id/action_setup_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/action_setup_2"
            app:layout_constraintTop_toTopOf="@+id/action_setup_2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/action_setup_2"
            style="@style/Debt.Destroyer.Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:padding="1dp"
            android:text="1 Tickets"
            android:textColor="@color/black"
            android:textSize="@dimen/footnote_text_size"
            app:icon="@drawable/ic_tickets"
            app:iconGravity="textEnd"
            app:iconSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:strokeColor="@color/lightgrey"
            app:strokeWidth="0.6dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>