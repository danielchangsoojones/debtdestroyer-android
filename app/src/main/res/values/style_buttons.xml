<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Primary button-->
    <style name="Debt.Destroyer.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">@dimen/buttons_height_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/button_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_horizontal</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="shapeAppearance">@style/AppShapeAppearance.SmallComponent</item>
        <item name="android:textAppearance">@style/Debt.Destroyer.ButtonTextStyle</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="Debt.Destroyer.Button.Small" parent="Debt.Destroyer.Button">
        <item name="android:layout_height">@dimen/buttons_height_small</item>
        <item name="android:background">@drawable/bg_button_primary_rounded</item>
    </style>

    <style name="Debt.Destroyer.Button.Tickets" parent="Debt.Destroyer.Button">
        <item name="android:textSize">@dimen/subheading_text_size</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:background">@drawable/bg_rounded_corners</item>
        <item name="iconPadding">@dimen/margin_medium</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">18dp</item>

    </style>

    <style name="Debt.Destroyer.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="barrierMargin">0dp</item>
        <item name="android:layout_height">@dimen/buttons_height_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/button_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_horizontal</item>
        <item name="android:textAppearance">@style/Debt.Destroyer.ButtonTextStyle</item>
        <item name="shapeAppearance">@style/AppShapeAppearance.SmallComponent</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="Debt.Destroyer.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">@dimen/buttons_height_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/button_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_horizontal</item>
        <item name="android:textAppearance">@style/Debt.Destroyer.TextButton.TextStyle</item>
        <item name="shapeAppearance">@style/AppShapeAppearance.SmallComponent</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!--Button Shapes-->
    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">6dp</item>
    </style>
    <style name="AppShapeAppearance.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="AppShapeAppearance.IconComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/input_fields_corners</item>
    </style>

</resources>