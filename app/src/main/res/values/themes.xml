<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Debtdestroyer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- background. -->
        <item name="colorSurface">@color/colorBackgroundLight</item>
        <item name="colorPrimarySurface">@color/colorBackgroundLight</item>

        <item name="colorOnBackground">@color/colorBackgroundLight</item>
        <item name="android:colorBackground">@color/colorBackgroundLight</item>

        <!--Labels-->
        <item name="android:editTextColor">@color/textDarkGrey</item>
        <item name="android:textColorPrimary">@color/textDarkGrey</item>
        <item name="android:textColorSecondary">@color/textDarkGrey</item>
    </style>

    <style name="Theme.Debtdestroyer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Debtdestroyer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Debtdestroyer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--CardView-->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:outlineProvider">background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/cardBackgroundColor</item>
    </style>

    <style name="DividerStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@color/grey</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>